<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AppointmentActivity">

    <TextView
        android:id="@+id/titleAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="LABTESTEASE"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleAppointmentTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Top Labs"
        android:textColor="#fff777"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/youtubeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rounded_button"
        android:contentDescription="YouTube Button"
        android:src="@drawable/ic_youtube"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="16dp" />




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleAppointmentTop"
        android:layout_margin="20dp"
        android:columnCount="2"
        android:rowCount="3" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardThyrocareTechnologies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="@color/purpleDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/thyrocare_tech" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ThyrocareTechnologies"
                    android:textAlignment="center"
                    android:textColor="@color/yellowLight"
                    android:textStyle="bold" />

                <!-- RatingBar -->
                <RatingBar
                    android:id="@+id/ratingThyrocare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.5"
                    android:isIndicator="true"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginTop="4dp"
                    android:progressTint="@android:color/holo_orange_light" />

                <!-- Rating Score -->
                <TextView
                    android:id="@+id/scoreThyrocare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 / 5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardApolloDiagnostics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="@color/purpleDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/apollo_dia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ApolloDiagnostics"
                    android:textAlignment="center"
                    android:textColor="@color/yellowLight"
                    android:textStyle="bold" />

                <!-- RatingBar -->
                <RatingBar
                    android:id="@+id/ratingApolloDiagnostics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="3.8"
                    android:isIndicator="true"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginTop="4dp"
                    android:progressTint="@android:color/holo_orange_light" />

                <!-- Rating Score -->
                <TextView
                    android:id="@+id/scoreApolloDiagnostics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.8/ 5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMetropolisHealthcare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="@color/purpleDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/metro_p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MetropolisHealthcare"
                    android:textAlignment="center"
                    android:textColor="@color/yellowLight"
                    android:textStyle="bold" />

                <!-- RatingBar -->
                <RatingBar
                    android:id="@+id/ratingMetropolisHealthcare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="3.5"
                    android:isIndicator="true"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginTop="4dp"
                    android:progressTint="@android:color/holo_orange_light" />

                <!-- Rating Score -->
                <TextView
                    android:id="@+id/scoreMetropolisHealthcare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 3.5/ 5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDrLalPathLabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="@color/purpleDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/lal_path" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr.Lal PathLabs"
                    android:textAlignment="center"
                    android:textColor="@color/yellowLight"
                    android:textStyle="bold" />

                <!-- RatingBar -->
                <RatingBar
                    android:id="@+id/ratingDrLalPathLabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="3.0"
                    android:isIndicator="true"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginTop="4dp"
                    android:progressTint="@android:color/holo_orange_light" />

                <!-- Rating Score -->
                <TextView
                    android:id="@+id/scoreDrLalPathLabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.0 / 5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSRLDiagnostics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="@color/purpleDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/srl_l" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SRLDiagnostics"
                    android:textAlignment="center"
                    android:textColor="@color/yellowLight"
                    android:textStyle="bold" />

                <!-- RatingBar -->
                <RatingBar
                    android:id="@+id/ratingSRLDiagnostics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="2.4"
                    android:isIndicator="true"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginTop="4dp"
                    android:progressTint="@android:color/holo_orange_light" />

                <!-- Rating Score -->
                <TextView
                    android:id="@+id/scoreSRLDiagnostics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.4 / 5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="@color/purpleDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textAlignment="center"
                    android:textColor="@color/yellowLight"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>



</RelativeLayout>